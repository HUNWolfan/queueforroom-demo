{
  "name": "queueforroom",
  "version": "1.0.0",
  "description": "School room reservation system with interactive map",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "start": "NODE_ENV=production remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "db:migrate": "node --import tsx -r dotenv/config ./app/migrate.ts",
    "db:seed": "node --import tsx -r dotenv/config ./app/seed.ts",
    "db:check": "node --import tsx -r dotenv/config ./app/check-db.ts",
    "test:emails": "node --import tsx -r dotenv/config ./app/test-emails.ts"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.17.2",
    "@remix-run/cloudflare-pages": "^2.17.2",
    "@remix-run/dev": "^2.11.2",
    "@remix-run/node": "^2.17.2",
    "@remix-run/react": "^2.17.2",
    "@remix-run/serve": "^2.11.2",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.6",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.3",
    "i18next": "^23.16.0",
    "node-cron": "^4.2.1",
    "pg": "^8.12.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.1.0",
    "resend": "^6.4.0",
    "speakeasy": "^2.0.0",
    "vite": "^5.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/speakeasy": "^2.0.10",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
